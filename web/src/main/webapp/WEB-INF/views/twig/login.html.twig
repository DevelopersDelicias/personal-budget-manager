{% extends 'layout.html.twig' %}

{% block stylesheets %}
<link href="resources/dist/css/signin.css" rel="stylesheet"/>
{% endblock %}

{% block layout %}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="page-header">
                <img src="resources/img/login/logo.png" class="img-responsive" alt="Personal Budget">
            </div>
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="form-signin-heading">Iniciar sesión</h3>
                </div>
                <div class="panel-body">
                    <form role="form" name="login-form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Correo" name="email"
                                       type="email">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Contraseña"
                                       name="password" type="password" value="">
                            </div>
                            <div class="checkbox">
                                <label> <input name="remember" type="checkbox"
                                               value="Remember Me">Recordarme
                                </label>
                            </div>
                            <a class="btn btn-primary btn-lg btn-block" href="homepage"
                               role="button">Entrar</a>
                        </fieldset>
                    </form>
                </div>
            </div>
            <footer class="footer">
                <div class="container">
                    <p class="text-muted">&copy; Developers Delicias</p>
                </div>
            </footer>
        </div>
    </div>
</div>

{% endblock %}